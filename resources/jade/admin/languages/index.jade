extends ../partials/template
block title
  title @lang('admin.languages.head')

block breadcrumbs
  ol.breadcrumb
    li
      a(href='/admin/dashboard')
        i.fa.fa-dashboard
        | @lang('admin.dashboard.head')
    li.active
      | @lang('admin.languages.head')
block inner-title
  h1 @lang('admin.languages.head')
    small @lang('admin.languages.head')
block content
  .row
    .col-xs-12
      .box
        .box-header
          a.btn.btn-primary(href="languages/create")
            h3.box-title @lang('admin.actions.create')
          .box-tools.pull-right
            .has-feedback
              form(action='',id='search-form')
                + php("Form::hidden('h-search-text', Input::old('h-search-text'), array('id'=>'h-search-text'))")
                + php("Form::text('search-text', Input::old('search-text'), array('id'=>'search-text', 'class'=>'form-control input-sm', 'placeholder'=>trans('admin.search.text')))")
                span.glyphicon.glyphicon-search.form-control-feedback
        .box-body.table-responsive.no-padding
          table.table.table-hover
            tr
              th Nome
              th Codice
              th
            + foreach('$languages','$l')
              tr
                td {{$l->description}}
                td {{$l->code}}
                td
                  +php ('"<a href=\'/admin/languages/$l->id/edit\'>"', '"</a>"')
                    span.glyphicon.glyphicon-edit
                  +php ('"<a href=\'/admin/languages/$l->id\'>"', '"</a>"')
                    span.glyphicon.glyphicon-remove
      + php("$languages->render()")

