extends ../partials/template
block title
  title @lang('admin.categories.head')

block breadcrumbs
  ol.breadcrumb
    li
      a(href='/admin/dashboard')
        i.fa.fa-dashboard
        | @lang('admin.dashboard.head')
    li.active
      | @lang('admin.categories.head')
block inner-title
  h1 @lang('admin.categories.head')
    small @lang('admin.categories.head')
block content
  .row
    .col-xs-12
      .box
        .box-header
          h3.box-title @lang('admin.categories.index.head')
          .box-tools
            .input-group(style='width:150 px;')
              form(action='',id='search-form')
                + php("Form::hidden('h-search-text', Input::old('h-search-text'), array('id'=>'h-search-text'))")
              + php("Form::text('search-text', Input::old('search-text'), array('id'=>'search-text', 'class'=>'form-control input-sm pull-right', 'placeholder'=>trans('admin.search.text')))")

              .input-group-btn
                button#press-search.btn.btn-sm.btn-default
                  i.fa.fa-search
        .box-body.table-responsive.no-padding
          table.table.table-hover
            tr
              th Titolo
              th Evento
              th
            + foreach('$categories','$c')
              tr
                td {{$c->description}}
                td {{$c->event->description}}
                td
                  +php ('"<a href=\'/admin/press-release/$c->id/edit\'>"', '"</a>"')
                    span.glyphicon.glyphicon-edit
                  +php ('"<a href=\'/admin/press-release/$c->id\'>"', '"</a>"')
                    span.glyphicon.glyphicon-remove
      + php("$categories->render()")

