extends ../partials/template

block title
  title @lang('press.register')

block content
  h1 @lang('press.register')
  + php ( "Form::open(array('route' => 'press-store', 'class' => 'form'))", "Form::close()" )
    fieldset
      legend @lang('press.contact.head')
      .form-group
        + php("Form::label(trans('press.contact.name'))")
        + php("Form::text('ANA_NOME', null, array('required', 'class'=>'form-control', 'placeholder'=>trans('Name')))")
      .form-group
        + php("Form::label(trans('press.contact.surname'))")
        + php("Form::text('ANA_COGNOME', null, array('required', 'class'=>'form-control', 'placeholder'=>trans('Surname')))")
      .form-group
        + php("Form::label(trans('press.contact.email'))")
        + php("Form::text('ANA_EMAIL', null, array('required', 'class'=>'form-control', 'placeholder'=>trans('Email')))")
      .form-group
        + php("Form::submit(trans('press.submit', ['fair_name' => 'FAIR NAME']), array('class' => 'btn btn-primary'))")
        + php("Form::reset(trans('press.reset'), array('class' => 'btn'))")

